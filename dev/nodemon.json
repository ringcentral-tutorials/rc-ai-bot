{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "test",
    "dist/",
    "src/data/*",
    "*.json"
  ],
  "verbose": true,
  "execMap": {
    "js": "node"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "src/lib/**",
    "src/common/**",
    "src/*.js",
    "dev/test-server/**",
    "config.default.js",
    "config.js",
    ".env"
  ],
  "ext": "js json"
}